<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/info_bg">
    <RelativeLayout
        android:background="#f75046"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/zml_avartar"
            android:src="@drawable/img_zmll_user"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/zml_username"
            android:layout_toRightOf="@id/zml_avartar"
            android:textSize="@dimen/sp_14"
            android:text="费心思迈"
            android:textColor="#f3f3f3"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/img_vip"
            android:layout_toRightOf="@id/zml_username"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/txbg"
        android:background="@drawable/img_zml"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


    </LinearLayout>




    <TextView
        android:id="@+id/fenxiang_txt"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="分享特权"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        />


</RelativeLayout>